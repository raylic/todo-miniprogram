.container {
  height: 100vh;
}
.top{
  position: relative;
  width: 100%;
  height: 70rpx;
  color: rgb(38, 183, 169);
}
#time {
  position: absolute;
  top: 0;
  left: 0;
  width: 180rpx;
  border: 2px rgb(38, 183, 169) solid;
  border-left: none; 
  border-right: none;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 40rpx;
  padding: 0 40rpx 0 10rpx;
  display: inline-block;
  text-align: center;
}
#right-border {
  position: absolute;
  top: 0;
  left: 218rpx;
  height: 58rpx;
  width: 70rpx;
  border-left: 2px rgb(38, 183, 169) solid;
  border-radius: 25rpx;
  display:inline-block;
}
.plan {
  box-sizing: border-box;
  display: block;
  width: 100vw;
  padding: 0 30rpx;
  margin-top: 20rpx;
}
.plan-text {
  font-size: 50rpx;
  color: rgb(38, 183, 169);
}
.plan-single {
  position: relative;
  margin-top: 30rpx;
}
.plan-body {
  box-sizing: border-box;
  height: 90rpx;
  font-size: 50rpx;
  display: block;
  margin: 0;
  border-radius: 10rpx;
  padding: 15rpx 10rpx;
  letter-spacing: 3rpx;
  font-weight: 400;
  color: #ffffff;
  background-color: rgb(38, 183, 169);
}
.plan-body-finished {
  box-sizing: border-box;
  height: 90rpx;
  font-size: 50rpx;
  display: block;
  margin: 0;
  border-radius: 10rpx;
  padding: 15rpx 10rpx;
  letter-spacing: 3rpx;
  font-weight: 400;
  color: #ffffff;
  /* 除了背景颜色其余一样 */
  background-color: #aaa;
}
#plan-add {
  margin-top:  30rpx;
}
#plan-body-burl {
  color: #ffffff;
  border: 1rpx solid transparent;
} 
#plan-body-focus {
  border-radius: 0;
  display: block;
  width: 610rpx;
  background-color: #ffffff;
  color: rgb(38, 183, 169);
  border: 1rpx solid rgb(38, 183, 169);
}
#add-icon {
  display: block;
  width: 60rpx;
  height: 60rpx;
  margin:  0rpx auto;
}
.plan-delete {
  box-sizing: border-box;
  background-color: rgb(38, 183, 169);
  height: 90rpx;
  padding-top: 15rpx;
  width: 80rpx;
  position: absolute;
  top:0;
  right: 0;
  z-index: 1;
}
.time-setting {
  display: block;
  margin: 30rpx auto;
}
.start {
  display: inline-block;
  width: 275rpx;
  height: 180rpx;
  color: #ffffff;
  background-color: rgb(38, 183, 169);
  line-height: 60rpx;
  font-size: 42rpx;
  text-align: center;
}
.line{
  display: inline-block;
  width: 100rpx;
  margin: 70rpx 20rpx 0 20rpx;
  height: 10rpx;
  background-color: rgb(38, 183, 169);
}
.dialog .weui-dialog{
  border: rgb(38, 183, 169) 4px solid;
  margin: 20px;
}
.dialog .weui-dialog__bd {
  font-weight: 400;
  color: rgb(38, 183, 169);
  font-size: 50rpx;
}
.dialog .weui-dialog__btn {
  font-weight: 700;
  background-color: rgb(38, 183, 169);
  color: #ffffff;
  font-size: 40rpx;
}
.dialog .weui-dialog__btn[data-index="0"] {
  font-weight: 700;
  color: rgb(38, 183, 169);
  background-color: #ffffff;
  font-size: 40rpx;
}
